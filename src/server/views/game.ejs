<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/root.css" />
    <script>
      const userId = <%- JSON.stringify(userId) %>; // Embed userId
      const games = <%- JSON.stringify(games || []) %>; // Embed games array
    </script>
    <script src="/js/main.js" defer></script>
  </head>
  <body class="background">
    <div class="content-wrapper">
    <header class="header">
      <div class="header-container">
        <h1>Bingo Game</h1>
        <p>Welcome, user ID: <%= userId %></p>
        <nav>
          <a href="/auth/logout" class="bubble-button">Logout</a>
          <a href="/" class="bubble-button">Go to Home</a>
        </nav>
      </div>
    </header>

    <main id="game-container">
      <!-- Left Side: Select a Game -->
      <section id="game-options">
        <h3>Select a Game</h3>
        <ul id="game-list">
        </ul>
      </section>
      
      <!-- Center: Game Board -->
      <section id="game-board">
        <h3>Game Board</h3>
        <div id="board-content">
          <!-- Bingo cells go here -->
        </div>
      </section>

      <!-- Right Side: Start/Join Game and Chat -->
      <div id="right-panel">

        <!-- Turn Info Section -->
      <section id="turn-info">
      </section>

        <!-- Start a New Game Section -->
        <section id="start-game-section" class="game-action">
          <h3>Start a New Game</h3>
          <button id="start-game" class="bubble-button">Start Game</button>
        </section>

        <!-- Join a Game Section -->
        <section id="join-game-section" class="game-action">
          <h3>Join a Game</h3>
          <label for="join-game-id">Enter Game ID:</label>
          <input
            type="text"
            id="join-game-id"
            placeholder="Game ID"
            class="chat-input-box"
          />
          <button id="join-game-button" class="bubble-button">Join Game</button>
        </section>

      <!-- Chat Section -->
    <!-- Chat Section -->
        <section id="chat-container">
          <h3>Chat</h3>
          <div id="chat-messages">
            <!-- Messages will be appended dynamically -->
          </div>
          <div id="chat-input">
            <input
              type="text"
              id="chat-message"
              placeholder="Type your message..."
              class="chat-input-box"
            />
            <button id="send-message" class="bubble-button">Send</button>
          </div>
        </section>
      </div>
    </main>
  </body>
</html>
