{
  "compilerOptions": {
    "target": "es2016", // Target JavaScript version for compiled output
    "module": "commonjs", // Use CommonJS modules
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of source files
    "strict": true, // Enable all strict type-checking options
    "typeRoots": ["./node_modules/@types", "./src/types"], // Include types from node_modules and custom types
    "esModuleInterop": true, // Enable ES module interoperability
    "resolveJsonModule": true, // Allow importing JSON files
    "baseUrl": "./", // Base URL for module resolution
    "paths": {
      "*": ["node_modules/*", "src/*"] // Allow imports from `src` as absolute paths
    },
    "forceConsistentCasingInFileNames": true, // Enforce case sensitivity in imports
    "allowJs": true, // Allow JavaScript files to be part of the project
    "skipLibCheck": true // Skip type checks for declaration files
  },
  "include": ["src/**/*"], // Include all TypeScript files in the `src` directory
  "exclude": ["node_modules", "dist", "**/*.test.ts"] // Exclude `node_modules`, `dist`, and test files
}
